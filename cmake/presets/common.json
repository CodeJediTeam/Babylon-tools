{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 30,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "babylon_common",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_C_STANDARD": "17"
            }
		},
		{
			"name": "babylon_debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "babylon_release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "babylon_profile",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Profile"
			}
		}
	]
}
